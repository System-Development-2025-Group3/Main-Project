<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="AnchorPaneLogin" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.studyspace.controllers.RegisterController" prefWidth="800" prefHeight="600">

    <VBox fx:id="LoginPane" spacing="10" alignment="CENTER"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"
          AnchorPane.topAnchor="150.0" AnchorPane.bottomAnchor="100.0">

        <TextField fx:id="WelcomeTitleTextfield" promptText="Welcome Title"/>
        <Label fx:id="TextAreaRegister" text="Create your StudySpace account"/>

        <TextField fx:id="DescriptionEmailTextfield" promptText="Email Description"/>
        <TextField fx:id="RegisterEmailField" promptText="Email"/>

        <TextField fx:id="DescriptionPasswordTextfield_1" promptText="Password Description"/>
        <PasswordField fx:id="RegisterPassword_1" promptText="Password"/>

        <TextField fx:id="DescriptionPasswordTextfield_2" promptText="Repeat Password Description"/>
        <PasswordField fx:id="RegisterPassword_2" promptText="Repeat Password"/>

        <Button fx:id="SubmitRegistrationButton" text="Register"/>
    </VBox>
</AnchorPane>
