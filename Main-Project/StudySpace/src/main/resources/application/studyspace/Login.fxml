<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Arc?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.studyspace.controllers.auth.LoginController"
            fx:id="AnchorPaneLogin"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #ecf1ff;"
            stylesheets="@Stylesheet.css">

    <!-- Background Arcs -->
    <Arc fx:id="arc1" startAngle="90.0" length="180.0" type="ROUND" stroke="#6e85d5" fill="#6e85d5" strokeType="INSIDE"/>
    <Arc fx:id="arc2" startAngle="90.0" length="180.0" type="ROUND" stroke="#a6b1f6" fill="#a6b1f6" strokeType="INSIDE"/>
    <Arc fx:id="arc3" startAngle="90.0" length="180.0" type="ROUND" stroke="#e2e4ff" fill="#e2e4ff" strokeType="INSIDE"/>

    <!-- Login Card -->
    <VBox fx:id="LoginCard"
          spacing="16"
          alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 18;">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <Label fx:id="WelcomeTitle" text="Welcome to StudySpace!"
               styleClass="welcome-title" />

        <TextFlow fx:id="textFlow" textAlignment="CENTER">
            <Text text="Do you have an Account or would you like to " />
            <Text fx:id="linkText" text="register" id="linkText" />
            <Text text=" for a new user Account on StudyFlow?" />
        </TextFlow>

        <Label text="E-Mail" styleClass="form-label"/>
        <TextField fx:id="InputEmailTextfield"
                   promptText="Please input your email ..."
                   styleClass="text-field" />

        <Label text="Password" styleClass="form-label"/>
        <PasswordField fx:id="InputPassword"
                       promptText="Please input your Password ..."
                       styleClass="password-field" />

        <CheckBox fx:id="StayLoggedInCheckBox"
                  text="Stay Logged in?" styleClass="custom-checkbox" />

        <Button fx:id="SubmitLoginButton" text="Login"
                styleClass="button" />
    </VBox>

    <!-- Laptop Image -->
    <ImageView fx:id="Image01" preserveRatio="true">
        <Image url="@../../images/LoginPage01.png"/>
    </ImageView>

    <!-- Top bar -->
    <Pane layoutX="20.0" layoutY="20.0"
          style="-fx-background-color: white; -fx-background-radius: 20;">
        <MenuBar layoutX="79.0" layoutY="11.0" prefHeight="37.0"
                 style="-fx-background-color: white;">
            <Menu text="Home |"/>
            <Menu text="About Us |"/>
            <Menu text="Contact"/>
        </MenuBar>
        <ImageView fitHeight="53.0" fitWidth="67.0" preserveRatio="true">
            <Image url="@../../images/LoginPage03.png"/>
        </ImageView>
    </Pane>
</AnchorPane>
