<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  We now load your OnboardingStylesheet so we can reuse the same
  card-box, field-label, page-button, etc. styles.
-->
<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.studyspace.controllers.calendar.EventDetailsController"
           stylesheets="@../styles/OnboardingStylesheet.css"
           style="-fx-background-color: transparent; -fx-padding: 40;"
           prefWidth="600" prefHeight="400">

    <VBox spacing="20"
          alignment="TOP_LEFT"
          styleClass="card-box"
          maxWidth="500">

        <!-- Title Row -->
        <HBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Title:" styleClass="field-label-bold"/>
            <Label fx:id="titleLabel" styleClass="subtitle"/>
        </HBox>

        <!-- Description Card -->
        <VBox spacing="8"
              styleClass="card-box"
              prefWidth="460">
            <Label text="Description" styleClass="field-label"/>
            <TextArea fx:id="descriptionArea"
                      editable="false"
                      wrapText="true"
                      prefRowCount="3"
                      styleClass="styled-text-area"/>
        </VBox>

        <!-- Start/End Card -->
        <HBox spacing="16" alignment="TOP_LEFT">
            <VBox spacing="4" styleClass="card-box" prefWidth="220">
                <Label text="Start" styleClass="field-label"/>
                <Label fx:id="startLabel" styleClass="subtitle"/>
            </VBox>
            <VBox spacing="4" styleClass="card-box" prefWidth="220">
                <Label text="End" styleClass="field-label"/>
                <Label fx:id="endLabel" styleClass="subtitle"/>
            </VBox>
        </HBox>

        <!-- Tag Card -->
        <VBox spacing="4"
              styleClass="card-box"
              prefWidth="460">
            <Label text="Tag" styleClass="field-label"/>
            <Label fx:id="tagLabel" styleClass="subtitle"/>
        </VBox>

        <!-- Spacer pushes buttons to bottom -->
        <Region VBox.vgrow="ALWAYS"/>

        <!-- Close & Delete Buttons -->
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <Button fx:id="closeBtn"
                    text="Close"
                    styleClass="page-button"/>
            <Button fx:id="deleteBtn"
                    text="Delete"
                    styleClass="page-button-selected"/>
        </HBox>
    </VBox>
</StackPane>
