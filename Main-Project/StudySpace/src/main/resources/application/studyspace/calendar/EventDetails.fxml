<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="application.studyspace.controllers.calendar.EventDetailsController"
          hgap="10" vgap="10">

    <!-- Properly define padding as Insets -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Two columns: labels (rightâ€aligned) and values -->
    <columnConstraints>
        <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
        <ColumnConstraints percentWidth="70" halignment="LEFT"/>
    </columnConstraints>

    <!-- Six rows: 5 fields + button row -->
    <rowConstraints>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="60"/>  <!-- description area -->
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="50"/>  <!-- buttons -->
    </rowConstraints>

    <children>
        <!-- Title -->
        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="titleLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Description -->
        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"
                  editable="false" wrapText="true" prefRowCount="3"/>

        <!-- Start -->
        <Label text="Start:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="startLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- End -->
        <Label text="End:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="endLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Tag -->
        <Label text="Tag:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="tagLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Close & Delete buttons -->
        <Button fx:id="closeBtn"
                text="Close"
                GridPane.rowIndex="5" GridPane.columnIndex="0"
                styleClass="page-button"/>
        <Button fx:id="deleteBtn"
                text="Delete"
                GridPane.rowIndex="5" GridPane.columnIndex="1"
                styleClass="page-button-selected"/>
    </children>
</GridPane>
