<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.studyspace.controllers.landingpage.LandingpageController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #f0f4ff;" prefWidth="150">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <Button text="Calendar" prefWidth="100"/>
            <Button text="Subjects" prefWidth="100"/>
            <Button text="Methods" prefWidth="100"/>
            <Button text="Dashboard" prefWidth="100"/>
        </VBox>
    </left>

    <!-- Top bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #f9faff;">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>

            <!-- Time section -->
            <VBox alignment="CENTER_LEFT">
                <Label text="Time: 10:15 AM" style="-fx-font-weight: bold;"/>
                <Label text="Timezone: CET"/>
                <Label text="Format: 12 Hours"/>
            </VBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Next session section -->
            <VBox spacing="5" alignment="CENTER_LEFT"
                  style="-fx-border-color: lightgray; -fx-border-radius: 8; -fx-background-color: #f9faff; -fx-background-radius: 8;">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="🔖"/>
                    <Label text="Next up: Learning Session Math @ 5pm" style="-fx-font-weight: bold;"/>
                </HBox>
                <ProgressBar progress="0.78" prefWidth="200"/>
                <Label text="14 out of 18"/>
            </VBox>

            <!-- View buttons and navigation -->
            <VBox spacing="5" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                    <Label text="View:" style="-fx-font-weight: bold;"/>
                    <Button text="Month" onAction="#showMonthView"/>
                    <Button text="Week" onAction="#showWeekView"/>
                    <Button text="Day" onAction="#showDayView"/>
                </HBox>
                <HBox spacing="10">
                    <Button text="←" onAction="#goToPrevious"/>
                    <Button text="→" onAction="#goToNext"/>
                </HBox>
            </VBox>

            <!-- New button and settings -->
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <MenuButton text="NEW"/>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@/images/Landing-Page/gear-icon.png"/>
                </ImageView>
            </VBox>
        </HBox>
    </top>

    <!-- Main content area -->
    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label fx:id="monthYearLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 5 0 0 0;"/>
            <StackPane fx:id="calendarContainer"
                       style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #dce4ff; -fx-border-radius: 10;">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
