<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="application.studyspace.controllers.auth.LoginController"
           fx:id="stackPane"
           stylesheets="@../styles/LoginandRegisterStylesheet.css"
           style="-fx-background-color: transparent;">

    <!-- Background -->
    <ImageView fx:id="Image03" preserveRatio="true" opacity="0.5"/>

    <VBox alignment="TOP_CENTER" fillWidth="true" spacing="0">

        <!-- Header -->
        <HBox alignment="CENTER_LEFT"
              spacing="20"
              style="-fx-background-color: white;
                     -fx-background-radius: 20;
                     -fx-border-color: #E0E0E0;
                     -fx-border-width: 1;
                     -fx-border-radius: 20;"
              prefHeight="80">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>
            <ImageView fitHeight="60" preserveRatio="true">
                <image>
                    <Image url="@../../../images/auth/LoginPage03.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Settings"
                    onAction="#handleSettingsClick"
                    styleClass="menu-button"/>
            <Button text="About Us"
                    onMouseClicked="#handleAboutUsClick"
                    styleClass="menu-button"/>
            <Button text="Contact"
                    onAction="#handleContactClick"
                    styleClass="menu-button"/>
        </HBox>

        <!-- Body -->
        <HBox alignment="CENTER"
              spacing="50"
              VBox.vgrow="ALWAYS"
              style="-fx-padding: 20 0 0 0;">
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Login Card -->
            <VBox fx:id="LoginCard"
                  spacing="15"
                  alignment="TOP_CENTER"
                  prefWidth="480" maxWidth="480"
                  prefHeight="600" maxHeight="600"
                  VBox.vgrow="NEVER"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-padding: 30;">
                <Label fx:id="WelcomeTitle"
                       text="Welcome to StudySpace!"
                       styleClass="welcome-title"/>
                <TextFlow fx:id="textFlow">
                    <Text text="Do you have an Account or would you like to "/>
                    <Text fx:id="linkText"
                          text="register"
                          onMouseClicked="#handleRegisterTextClick"
                          styleClass="link-text"/>
                    <Text text=" for a new user Account on StudyFlow?"/>
                </TextFlow>
                <Label text="E-Mail" styleClass="form-label"/>
                <HBox spacing="5" alignment="CENTER_LEFT" prefWidth="Infinity">
                    <TextField fx:id="InputEmailTextfield"
                               promptText="Please input your email ..."
                               styleClass="text-field"
                               HBox.hgrow="ALWAYS"/>
                    <Label fx:id="emailTooltip"
                           text="?"
                           styleClass="circle-label"/>
                </HBox>
                <Label text="Password" styleClass="form-label"/>
                <HBox spacing="5" alignment="CENTER_LEFT" prefWidth="Infinity">
                    <PasswordField fx:id="InputPassword"
                                   promptText="Please input your Password ..."
                                   styleClass="password-field"
                                   HBox.hgrow="ALWAYS"/>
                    <Label fx:id="passwordTooltip"
                           text="?"
                           styleClass="circle-label"/>
                </HBox>
                <CheckBox fx:id="stayLoggedInCheckbox"
                          text="Stay Logged In"/>
                <Button fx:id="SubmitLoginButton"
                        text="Login"
                        styleClass="button"
                        onMouseClicked="#handleSubmitLoginButtonClick"/>
            </VBox>

            <!-- Illustration -->
            <ImageView fitHeight="400" preserveRatio="true">
                <image>
                    <Image url="@../../../images/auth/LoginPage01.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</StackPane>
