<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.studyspace.controllers.onboarding.OnboardingPage1Controller"
           stylesheets="@../styles/OnboardingStylesheet.css"
           style="-fx-background-color: transparent;"
           prefWidth="800" prefHeight="600">

    <!-- pagination ToggleGroup (non-visual) -->
    <fx:define>
        <ToggleGroup fx:id="paginationGroup"/>
    </fx:define>

    <!-- main white card -->
    <VBox spacing="20"
          alignment="TOP_CENTER"
          maxWidth="700"
          style="-fx-background-color: white;
               -fx-padding: 30;
               -fx-background-radius: 15;
               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <!-- top bar with “▾ Planify” -->
        <HBox spacing="6" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
            <Label text="▾" style="-fx-font-size:14px; -fx-text-fill:#121417;"/>
            <Label text="Planify" style="-fx-font-size:14px; -fx-font-weight:bold; -fx-text-fill:#121417;"/>
        </HBox>

        <!-- Title -->
        <Label text="Welcome to Planify"
               style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#121417;"/>

        <!-- Preferred time -->
        <ComboBox fx:id="preferredTimeBox"
                  promptText="Select your preferred study time"
                  prefWidth="350"
                  styleClass="styled-combo"/>

        <!-- Session length slider -->
        <HBox spacing="16" alignment="CENTER_LEFT">
            <Label text="Study session length" styleClass="field-label"/>
            <Slider fx:id="sessionLengthSlider"
                    min="10" max="180" value="30"
                    styleClass="styled-slider"/>
            <Label fx:id="sessionLengthLabel"
                   text="30 min"
                   styleClass="slider-value"/>
        </HBox>

        <!-- Break length slider -->
        <HBox spacing="16" alignment="CENTER_LEFT">
            <Label text="Break length" styleClass="field-label"/>
            <Slider fx:id="breakLengthSlider"
                    min="5" max="60" value="10"
                    styleClass="styled-slider"/>
            <Label fx:id="breakLengthLabel"
                   text="10 min"
                   styleClass="slider-value"/>
        </HBox>

        <!-- Blocked days checkboxes -->
        <VBox spacing="4" alignment="TOP_LEFT" style="-fx-padding:0 0 0 20;">
            <Label text="Blocked days" styleClass="field-label-bold"/>
            <CheckBox fx:id="mondayCheck" text="Monday"/>
            <CheckBox fx:id="tuesdayCheck" text="Tuesday"/>
            <CheckBox fx:id="wednesdayCheck" text="Wednesday"/>
            <CheckBox fx:id="thursdayCheck" text="Thursday"/>
            <CheckBox fx:id="fridayCheck" text="Friday"/>
            <CheckBox fx:id="saturdayCheck" text="Saturday"/>
            <CheckBox fx:id="sundayCheck" text="Sunday"/>
        </VBox>

        <!-- Pager buttons (1, 2, 3) -->
        <HBox spacing="12" alignment="CENTER" style="-fx-padding:20 0 0 0;">
            <Button text="1"
                    fx:id="page1Btn"
                    styleClass="page-button-selected"
                    onAction="#handlePage1"/>
            <Button text="2"
                    fx:id="page2Btn"
                    styleClass="page-button"
                    onAction="#handlePage2"/>
            <Button text="3"
                    fx:id="page3Btn"
                    styleClass="page-button"
                    onAction="#handlePage3"/>
        </HBox>

    </VBox>
</StackPane>
